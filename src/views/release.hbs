<div class="w-full max-w-[500px] m-auto mb-8 sm:my-8 gradient-border border-[16px] animate-gradBorder shadow-even shadow-pink-300 bg-no-repeat bg-top [background-image:url(/assets/images/me.png)] bg-contain">
  <img class="w-full" src="/assets/images/releases/{{slug}}.jpg" />

  <div class="text-center py-8 bg-black bg-opacity-80">
    <div class="mb-2 text-2xl">Steven Laidlaw - {{title}}</div>
    <div class="text-sm">Listen now on your preferred service</div>
  </div>

  {{#each links}}
  <div class="flex justify-between items-center p-6 w-full border-t border-white border-opacity-20 bg-black bg-opacity-50">
    <img class="h-10" src="/assets/images/services/{{slug}}.svg" />
    <a class="w-32 border border-white border-opacity-20 bg-white bg-opacity-5 hover:bg-opacity-20 p-3 rounded-lg flex items-center justify-center" title="Play" href="{{url}}" target="_blank" rel="noopener">
      Play
    </a>
  </div>
  {{/each}}
</div>